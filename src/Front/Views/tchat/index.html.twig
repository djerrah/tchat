{% extends "layout/default.html.twig" %}


{% block javascripts %}
    {{ parent() }}
    <script src="/js/main.js" type="text/javascript"></script>
{% endblock javascripts %}

{% block body %}
    <h1>Tchat << {{ user.username }} >></h1>
    <ul id="tchat_content" style="width: 100%; height:300px; overflow:scroll; border: solid 1px #000000; ">
        {% include 'tchat/_messages.html.twig' %}
    </ul>
    <form id="tchat_form" name="tchat" action="{{ action }}" method="post" accept-charset="utf-8">
        <input style="width: 100%;" id="tchat_form_body" name="tchat[body]" placeholder="your message hear"
               required
               value="">
    </form>
{% endblock body %}